rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /contratos/{fileName} {
      // Funciones de validaci칩n
      function isPdf() {
        return request.resource.contentType == 'application/pdf';
      }

      function isValidSize() {
        return request.resource.size <= 10 * 1024 * 1024; // 10MB m치ximo
      }

      // Permitir lectura a usuarios autenticados
      allow read: if request.auth != null;
      
      // Permitir escritura a usuarios autenticados con validaciones
      allow create, update: if request.auth != null
                             && isPdf()
                             && isValidSize();
      
      // Permitir eliminaci칩n a usuarios autenticados
      allow delete: if request.auth != null;
    }

    // Denegar acceso a todas las dem치s rutas por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 